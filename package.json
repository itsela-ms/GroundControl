{
  "name": "groundcontrol",
  "version": "0.4.0",
  "description": "Session manager for GitHub Copilot CLI â€” visual overview, instant switching, and easy resume instead of hunting for session IDs.",
  "main": "src/main.js",
  "author": "itsela-ms",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/renderer.js --bundle --outfile=dist/renderer.js --platform=browser --format=iife",
    "start": "npm run build && electron . --no-sandbox",
    "launch": "npm run build && wscript launch.vbs",
    "dist": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.itsela.groundcontrol",
    "productName": "GroundControl",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "win": {
      "target": "nsis",
      "icon": "groundcontrol.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": {
      "provider": "github",
      "owner": "itsela-ms",
      "repo": "GroundControl"
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "electron-updater": "^6.7.3",
    "js-yaml": "^4.1.0",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.3"
  }
}
